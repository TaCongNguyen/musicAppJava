<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@drawable/cuttom_background_playnhac"
    tools:context=".PlayNhacActivity">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ToolbarColoredBackArrow"
        android:id="@+id/toolbarplaynhac">

    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/viewpagerplaynhac">

    </androidx.viewpager.widget.ViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">
        <ImageView
            android:id="@+id/imgYeuThichTrongPlayer"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_love_white">
        </ImageView>

    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:weightSum="10"
            android:gravity="center|top"
            android:layout_weight="0.7"
            android:orientation="horizontal">
            <TextView
                android:textStyle="bold"
                android:textSize="16sp"
                android:text="00:00"
                android:gravity="center"
                android:layout_weight="0.5"
                android:id="@+id/textviewtimesong"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp">

            </TextView>
            <SeekBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="9"
                android:id="@+id/seekbarsong"></SeekBar>
            <TextView
                android:textStyle="bold"
                android:text="00:00"
                android:textSize="16sp"
                android:gravity="center"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:id="@+id/textviewtotaltimesong"
                android:layout_marginEnd="5dp">

            </TextView>
        </LinearLayout>
    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5">
        <ImageButton
            android:background="@null"
            android:src="@drawable/iconsuffle"
            android:scaleType="fitXY"
            android:id="@+id/imagebuttonsuffle"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_16dp"
            android:layout_width="30dp"
            android:layout_height="30dp">

        </ImageButton>
        <ImageButton
            android:background="@null"
            android:src="@drawable/iconpreview"
            android:scaleType="fitXY"
            android:id="@+id/imagebuttonpre"
            android:layout_marginRight="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@+id/imagebuttonplay">

        </ImageButton>
        <ImageButton
            android:background="@null"
            android:src="@drawable/iconplay"
            android:scaleType="fitXY"
            android:id="@+id/imagebuttonplay"
            android:layout_marginRight="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true">

        </ImageButton>
        <ImageButton
            android:background="@null"
            android:src="@drawable/iconnext"
            android:scaleType="fitXY"
            android:id="@+id/imagebuttonnext"
            android:layout_marginRight="15dp"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/imagebuttonplay">

        </ImageButton>
        <ImageButton
            android:background="@null"
            android:src="@drawable/iconrepeat_white"
            android:scaleType="fitXY"
            android:id="@+id/imagebuttonrepeat"
            android:layout_marginRight="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true">

        </ImageButton>
    </RelativeLayout>
</LinearLayout>