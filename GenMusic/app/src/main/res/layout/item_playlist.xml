<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="6dp"
    android:layout_margin="@dimen/_8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvAnhBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true">

            <ImageView
                android:id="@+id/imgAnhBaiHat"
                android:layout_width="@dimen/_56dp"
                android:layout_height="@dimen/_56dp"
                android:src="@drawable/baihat_buocquamuacodon"></ImageView>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtTieuDeBaiHat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/cvAnhBaiHat"
            android:padding="4dp"
            android:text="Bước qua mùa cô đơn"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/txtCaSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txtTieuDeBaiHat"
            android:layout_toEndOf="@id/cvAnhBaiHat"
            android:padding="4dp"
            android:text="Vũ"
            android:textSize="12sp"></TextView>


        <ImageView
            android:id="@+id/imgThemVaoPlaylist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/playlist_add"

            ></ImageView>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/_8dp"
            android:layout_toStartOf="@id/imgThemVaoPlaylist"
            android:src="@drawable/favorite_border"

            ></ImageView>

    </RelativeLayout>

</androidx.cardview.widget.CardView>