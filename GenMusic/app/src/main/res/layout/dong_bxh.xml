<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <ImageView

        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:id="@+id/imageviewbackgroundchart"
        android:layout_width="match_parent"
        android:layout_height="80dp"></ImageView>
    <View
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:background="@drawable/dong_bxh"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="80dp">

    </View>
    <ImageView

        android:id="@+id/imageviewchart"
        android:scaleType="fitXY"
        android:layout_alignBottom="@+id/imageviewbackgroundchart"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:elevation="6dp"
        android:layout_width="65dp"
        android:layout_height="60dp"></ImageView>
    <TextView


        android:text="Những bài hát huyền thoại "
        android:layout_alignBottom="@+id/imageviewchart"
        android:layout_toRightOf="@+id/imageviewchart"
        android:layout_marginLeft="13dp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:id="@+id/textviewtenchart"
        android:maxLines="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp">

    </TextView>
</RelativeLayout>