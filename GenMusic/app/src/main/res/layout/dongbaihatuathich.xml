<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutBaiHatUaThich"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardviewbaihat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp">
        <ImageView
            android:id="@+id/imageViewbaihatuathich"
            android:scaleType="fitXY"
            android:layout_width="70dp"
            android:layout_height="70dp"></ImageView>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toEndOf="@+id/cardviewbaihat"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toStartOf="@+id/imageViewluotthich"
        android:layout_marginEnd="8dp">

        <TextView
            android:layout_toRightOf="@+id/imageViewbaihatuathich"
            android:text="Tên bài hát"
            android:textColor="@color/black"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="16sp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:id="@+id/textviewtenbaihatuathich"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textviewcasibaihatuathich"
            android:layout_below="@+id/textviewtenbaihatuathich"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="Ca Sĩ"
            android:layout_toRightOf="@id/imageViewbaihatuathich"
            android:textSize="13sp"
            android:textColor="@color/grey"
            android:maxLines="1"
            android:ellipsize="end">

        </TextView>
    </LinearLayout>
    <ImageView
        android:id="@+id/imageViewluotthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:src="@drawable/ic_love"
        android:scaleType="centerCrop"
        android:layout_marginRight="10dp">
    </ImageView>
</RelativeLayout>