<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MinimizedPlayerFragment">
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/light_grey"></View>
    <RelativeLayout
        android:id="@+id/relativeLayoutMinimizedPlayer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardviewAnhBaiHatMiniPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="3dp"
            app:cardCornerRadius="6dp">
            <ImageView
                android:id="@+id/imgAnhBaiHatMinimizedPlayer"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/baihat_buocquamuacodon"></ImageView>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toEndOf="@+id/cardviewAnhBaiHatMiniPlayer"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toStartOf="@+id/imgLuotThichMinimizedPlayer"
            android:layout_marginEnd="8dp">

            <TextView
                android:id="@+id/txtTenBaiHatMinimizedPlayer"
                android:layout_toRightOf="@+id/imageViewbaihatuathich"
                android:text="Tên bài hát"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="16sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </TextView>
            <TextView
                android:id="@+id/txtCaSiMinimizedPlayer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTenBaiHatMinimizedPlayer"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:text="Ca Sĩ"
                android:layout_toRightOf="@id/imageViewbaihatuathich"
                android:textSize="13sp"
                android:textColor="@color/grey"
                android:maxLines="1"
                android:ellipsize="end">

            </TextView>
        </LinearLayout>
        <ImageView
            android:id="@+id/imgLuotThichMinimizedPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_love"
            android:scaleType="centerCrop"
            android:layout_toStartOf="@+id/btnPlayPauseMinimizedPlayer">
        </ImageView>
        <ImageButton
            android:id="@+id/btnPlayPauseMinimizedPlayer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/iconplay_black"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="5dp"
            android:scaleType="fitXY"
            android:layout_toStartOf="@+id/btnNextMinimizedPlayer"
            ></ImageButton>
        <ImageButton
            android:id="@+id/btnNextMinimizedPlayer"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@null"
            android:src="@drawable/iconnext_black"
            android:layout_marginHorizontal="5dp"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:layout_alignParentEnd="true"></ImageButton>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/light_grey"></View>
</LinearLayout>