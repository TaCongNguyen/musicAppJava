<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/RLayoutBaiHat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_56dp"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="@dimen/_8dp"
        android:background="@drawable/selected_effect">

        <ImageView
            android:id="@+id/imgThuVienBaiHat"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/library_music"
            android:layout_centerVertical="true"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bài hát"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/imgThuVienBaiHat"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16dp"
            ></TextView>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist cá nhân"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginStart="@dimen/_8dp"
        android:layout_marginTop="@dimen/_24dp"/>

    <RelativeLayout
        android:id="@+id/RLayoutPlaylist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16dp"
        android:layout_marginHorizontal="@dimen/_8dp">

        <ImageView
            android:id="@+id/imgThemPlaylist"
            android:layout_width="@dimen/_40dp"
            android:layout_height="@dimen/_40dp"
            android:layout_alignParentStart="true"
            android:src="@drawable/library_add"
            android:layout_centerVertical="true"></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tạo playlist mới"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_toEndOf="@+id/imgThemPlaylist"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/_16dp"
            ></TextView>

    </RelativeLayout>

    <!-- danh sách các playlist-->
