<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chart_category_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/chart_category_image_1"
        android:layout_width="127dp"
        android:layout_height="127dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        tools:src="@drawable/chart_vn" />

    <TextView
        android:id="@+id/chart_category_title_1"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:layout_below="@id/chart_category_image_1"
        android:layout_marginTop="127dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        android:textColor="@color/FlatWhite"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/chart_category_image_1"
        tools:text=" Top Nhạc Việt" />

    <View
      android:id="@+id/chart_category_over_1"
      android:layout_width="392dp"
      android:layout_height="149dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@id/chart_category_image_1"
      app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/chart_category_image_2"
        android:layout_width="127dp"
        android:layout_height="127dp"

        android:layout_marginStart="4dp"
        android:layout_marginBottom="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chart_category_image_1"
        app:srcCompat="@drawable/chart_us" />

    <ImageView
        android:id="@+id/chart_category_image_3"
        android:layout_width="127dp"
        android:layout_height="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/chart_artist" />

    <TextView
        android:id="@+id/chart_category_title_2"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="127dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/FlatWhite"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        app:layout_constraintStart_toEndOf="@+id/chart_category_title_1"
        app:layout_constraintTop_toTopOf="@+id/chart_category_image_2"
        tools:text="Top Nhạc Âu Mĩ"/>

    <TextView
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:paddingStart="12dp"
        android:paddingTop="4dp"
        android:paddingEnd="12dp"
        android:paddingBottom="4dp"
        android:id="@+id/chart_category_title_3"
        android:layout_width="127dp"
        android:layout_height="24dp"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:layout_marginTop="127dp"
        android:textColor="@color/FlatWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/chart_category_title_2"
        app:layout_constraintTop_toTopOf="@+id/chart_category_image_3"
        tools:text="Top Nghệ sĩ"/>


</androidx.constraintlayout.widget.ConstraintLayout>
